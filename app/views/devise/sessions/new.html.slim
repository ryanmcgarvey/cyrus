.ui.container.middle.aligned.center.aligned.grid
  .column
    h2.ui.header Sign in
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui large form'}) do |f|
      .ui.stacked.segment
        .field
          .ui.left.icon.input
            i.user.icon
            = f.email_field :email, autofocus: true, placeholder: 'email'

        .field
          .ui.left.icon.input
            i.lock.icon
            = f.password_field :password, autocomplete: "off" , placeholder: 'passsword'

        .ui.fluid.large.teal.submit.button
          = f.submit "Sign in"

      .ui.error.message
        = devise_error_messages!

      .ui.message
        = render "devise/shared/links"
